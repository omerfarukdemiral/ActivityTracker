# Veritabanı Ayarları
DATABASE_PATH=./data/activity_data.db

# Veri Toplama Ayarları
COLLECTION_INTERVAL=5  # Saniye cinsinden veri toplama aralığı
ENABLE_KEYBOARD_TRACKING=false
ENABLE_MOUSE_TRACKING=false
ENABLE_WINDOW_TRACKING=true
ENABLE_FILE_TRACKING=true
ENABLE_BROWSER_TRACKING=true
ENABLE_GAME_TRACKING=true

# Gizlilik Ayarları
EXCLUDED_APPS=["password manager", "banking app"]
EXCLUDED_WEBSITES=["bank.com", "health.com"]
EXCLUDED_DIRECTORIES=["C:/Users/PC/Private", "C:/Users/PC/Documents/Sensitive", "C:/Users/PC/Desktop/CursorProjects/ActivityTracker"]

# Yapay Zeka API Ayarları
OPENAI_API_KEY=your_openai_api_key_here
AI_MODEL=gpt-4
AI_TEMPERATURE=0.7

# İçerik Yayınlama Ayarları
CONTENT_PUBLISH_INTERVAL=86400
WEBSITE_API_ENDPOINT=https://your-website.com/api/posts
WEBSITE_API_KEY=your_website_api_key_here 